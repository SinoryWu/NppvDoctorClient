<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/log_out_group_bg">

    <Button
        android:id="@+id/dialog_share_share"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/share_btn_share_bg"
        android:text="分享"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dialog_share_save"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/share_btn_save_bg"
        android:text="保存图片"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_share_share" />
</androidx.constraintlayout.widget.ConstraintLayout>