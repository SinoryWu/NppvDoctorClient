<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335dp"
    android:layout_height="302dp"
    android:background="@drawable/dialog_private_bg"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="隐私政策"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/private_dialog_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="80dp"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/private_dialog_btn_confirm"
        android:layout_width="167dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@drawable/private_dialog_btn_bg"
        android:text="同意"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/private_dialog_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@null"
        android:text="不同意并退出App"
        android:textSize="12sp"
        android:stateListAnimator="@null"
        android:textColor="#000000"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>